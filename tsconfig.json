{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@support/*": ["support/*"],
      "@pages/*": ["pages/*"],
      "@data/*": ["data/*"],
      "@components/*": ["components/*"],
      "@fixtures/*": ["fixtures/*"]
    },
    "types": ["@playwright/test"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}